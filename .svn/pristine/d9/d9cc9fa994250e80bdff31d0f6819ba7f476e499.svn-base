<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.skl.cloud.dao.user.RoleMapper">
	<insert id="insertRole" parameterType="com.skl.cloud.model.user.Role" useGeneratedKeys="true">
       	<selectKey keyProperty="roleId" resultType="Long" order="BEFORE">
			 select get_uuid_short() as roleId
		</selectKey>
       	INSERT INTO t_role(
        	role_id,
	        name,
	        description,
	        kind,
	        type,
	        available_flag,	        
	        create_date,
	        l_upd_date
        	)
    	VALUES(
    		#{roleId},
    		#{name},
    		#{description},
    		#{kind},
    		#{type},
    		#{availableFlag},
    		now(),
    		now()
    		)
	</insert>
	
	<update id="updateRole" parameterType="com.skl.cloud.model.user.Role">
	    UPDATE t_role 
	    SET 
	        name = #{name},
	        description = #{description},
	        kind = #{kind},
	        type = #{type},
	        available_flag = #{availableFlag},
	        l_upd_date = now()
	    <where>
	    	1=1
            <if test="id !=null ">
                AND role_id = #{roleId}
            </if>
            <if test="kind !=null ">
                AND kind = #{kind}
            </if>
            <if test="type !=null ">
                AND type = #{type}
            </if>
        </where>  
    </update>
    
    <delete id="deleteRole" parameterType="long">
        DELETE FROM t_role WHERE role_id = #{0}
    </delete>
    
    <select id="queryRole" parameterType="com.skl.cloud.model.user.Role" resultType="com.skl.cloud.model.user.Role">
        SELECT
            role_id as roleId,
	        name,
	        description,
	        kind,
	        type,
	        available_flag as availableFlag,	        
	        create_date as createDate,
	        l_upd_date as lupDate
        FROM
            t_role
       <where>
       		1=1
           <if test="roleId !=null ">
               AND role_id = #{roleId}
            </if>
            <if test="kind !=null ">
                AND kind = #{kind}
            </if>
            <if test="type !=null ">
                AND type = #{type}
            </if>
        </where> 
    </select>
</mapper>